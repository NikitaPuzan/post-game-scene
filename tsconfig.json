{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/*", "global.d.ts"],
  "exclude": ["node_modules"]
}
